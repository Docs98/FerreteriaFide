<div class="row">
    <div class="col-xl-6">
        <div class="card">
            <div class="card-body">

                <form class="custom-validation" action="#">


                    <div class="mb-3">
                        <input type="hidden" asp-for="IdMarca" />
                        <label>Nombre de la Marca</label>
                        <div>
                            @Html.TextBoxFor(u => u.Nombre, new {@class = "form-control", placeholder = "Digite el nombre de la marca" })

                        </div>
                    </div>
                    <div class="mb-0">
                        <div>
                            <button type="submit" formaction=@Url.Action("UpdateMarca","Marca") formmethod="post" class="btn btn-primary waves-effect waves-light me-1">
                                Guardar cambios
                            </button> |
                            <a asp-action="Index">Regresar a la lista de marcas</a>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div> <!-- end col -->

</div> <!-- end row -->

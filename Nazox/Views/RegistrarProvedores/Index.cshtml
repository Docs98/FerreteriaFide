@model FerreteriaFide.Domain.Models.Proveedor
@{
    ViewBag.Title = "Registrar Provedores";
    ViewBag.pTitle = "Registrar Provedores";
    ViewBag.pageTitle = "Ferreteria Fide";
    Layout = "~/Views/_Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-xl-6">
        <div class="card">
            <div class="card-body">
                
                <form class="custom-validation" action="#">

                    <div class="mb-3">
                        <label>Nombre del Provedor</label>
                        @Html.TextBoxFor(u => u.Nombre, new {@class = "form-control", placeholder = "Digite el nombre del producto" })
                    </div>
                    <div class="mb-3">
                        <label>Dirrecion del provedor</label>
                        <div>
                            @Html.TextBoxFor(u => u.Direccion, new {@class = "form-control", placeholder = "Digite la dirrecion del provedor"})
                        </div>
                    </div>
                 
                    <div class="mb-3">
                        <label>Email</label>
                        <div>
                            @Html.TextBoxFor(u => u.Correo, new {@class = "form-control", placeholder = "Digite el email del provedor" })
                        </div>
                    </div>
                    <div class="mb-3">
                        <label>Precio del producto</label>
                        <div>
                            @Html.TextBoxFor(u => u.Telefono, new {@class = "form-control", placeholder = "Digitarel numero telefonico",type="number" })
                        </div>
                    </div>
                   
                   
                    <div class="mb-0">
                        <div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light me-1">
                                Registrar
                            </button>
                            <button type="reset" class="btn btn-secondary waves-effect">
                                Cancel
                            </button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div> <!-- end col -->

</div> <!-- end row -->


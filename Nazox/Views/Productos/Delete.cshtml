<h1>Eliminar producto</h1>

<h3>¿Está seguro que desea eliminar este producto?</h3>
<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre del producto:

        </dt>
        <dd class="col-sm-10">
            <b>@Html.DisplayFor(model => model.Nombre)</b>
        </dd>
    </dl>

    <form asp-action="DeleteProducto">
        <input type="hidden" asp-for="IdProducto" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Regresar a la lista de Productos</a>
    </form>
</div>

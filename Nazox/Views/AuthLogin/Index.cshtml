@model FerreteriaFide.Domain.Models.Usuarios
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/_Shared/_BlankLayout.cshtml";
}

<div>
    <div class="container-fluid p-0">
        <div class="row g-0">
            <div class="col-lg-4">
                <div class="authentication-page-content p-4 d-flex align-items-center min-vh-100">
                    <div class="w-100">
                        <div class="row justify-content-center">
                            <div class="col-lg-9">
                                <div>
                                    <div class="text-center">
                                        <div>
                                            <a href=@Url.Action("Index", "Productos") class="">
                                                <img src="~/assets/images/logo-dark.png" alt="" height="20" class="auth-logo logo-dark mx-auto">
                                                <img src="~/assets/images/logo-light.png" alt="" height="20" class="auth-logo logo-light mx-auto">
                                            </a>
                                        </div>

                                        <h4 class="font-size-18 mt-4">Bienvenido</h4>
                                        <p class="text-muted">Inicie Sesion en FERRETERIAFIDE.</p>
                                    </div>

                                    <div class="p-2 mt-5">
                                        <form class="" action=@Url.Action("Index", "Productos")>

                                            <div class="mb-3 auth-form-group-custom mb-4">
                                                <i class="ri-user-2-line auti-custom-input-icon"></i>
                                                <label for="username">Username</label>
                                                @Html.TextBoxFor(u => u.Email, new {@id = "EmailUser", @class = "form-control"})
                                            </div>

                                            <div class="mb-3 auth-form-group-custom mb-4">
                                                <i class="ri-lock-2-line auti-custom-input-icon"></i>
                                                <label for="userpassword">Contraseña</label>
                                                @Html.PasswordFor(u => u.Clave, new {@id = "EmailUser", @class = "form-control"})
                                            </div>

                                           

                                            <div class="mt-4 text-center">
                                                <button formaction=@Url.Action("Signin","AuthLogin") formmethod="post" class="btn btn-primary w-md waves-effect waves-light" type="submit">Iniciar Sesion</button>
                                            </div>

                                           
                                        </form>
                                    </div>

                                    <div class="mt-5 text-center">
                                        <p>No tienes una cuenta? <a href=@Url.Action("Index", "AuthRegister") class="fw-medium text-primary"> Registrarse </a> </p>
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="authentication-bg">
                    <div class="bg-overlay"></div>
                </div>
            </div>
        </div>
    </div>
</div>
